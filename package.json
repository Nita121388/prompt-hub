{
  "name": "prompt-hub",
  "displayName": "Prompt Hub",
  "description": "VSCode 插件，用于统一管理和组织 AI Prompt，支持本地存储、Git 同步、AI 辅助生成",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Notebooks"
  ],
  "keywords": [
    "prompt",
    "ai",
    "gpt",
    "openai",
    "snippet",
    "prompt-management"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "promptHub.createFromSelection",
        "title": "Prompt Hub: 从选区创建",
        "category": "Prompt Hub"
      },
      {
        "command": "promptHub.newPromptFile",
        "title": "Prompt Hub: 新建 Prompt 文件",
        "category": "Prompt Hub"
      },
      {
        "command": "promptHub.aiGenerateMeta",
        "title": "Prompt Hub: 生成标题/emoji",
        "category": "Prompt Hub"
      },
      {
        "command": "promptHub.aiOptimize",
        "title": "Prompt Hub: 优化 Prompt 内容",
        "category": "Prompt Hub"
      },
      {
        "command": "promptHub.gitSync",
        "title": "Prompt Hub: Git 同步",
        "category": "Prompt Hub"
      },
      {
        "command": "promptHub.searchPrompt",
        "title": "Prompt Hub: 搜索 Prompt",
        "category": "Prompt Hub"
      },
      {
        "command": "promptHub.copyPromptContent",
        "title": "Prompt Hub: 复制内容",
        "category": "Prompt Hub"
      },
      {
        "command": "promptHub.deletePrompt",
        "title": "Prompt Hub: 删除 Prompt",
        "category": "Prompt Hub"
      },
      {
        "command": "promptHub.refreshView",
        "title": "Prompt Hub: 刷新视图",
        "category": "Prompt Hub",
        "icon": "$(refresh)"
      },
      {
        "command": "promptHub.openSettings",
        "title": "Prompt Hub: 打开设置",
        "category": "Prompt Hub"
      },
      {
        "command": "promptHub.startOnboarding",
        "title": "Prompt Hub: 配置向导",
        "category": "Prompt Hub"
      },
      {
        "command": "promptHub.resetOnboarding",
        "title": "Prompt Hub: 重置配置向导",
        "category": "Prompt Hub"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "promptHub",
          "title": "Prompt Hub",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "promptHub": [
        {
          "id": "promptHubView",
          "name": "Prompts"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "promptHub.createFromSelection",
          "when": "editorHasSelection",
          "group": "1_modification"
        }
      ],
      "view/title": [
        {
          "command": "promptHub.refreshView",
          "when": "view == promptHubView",
          "group": "navigation"
        },
        {
          "command": "promptHub.openSettings",
          "when": "view == promptHubView",
          "group": "navigation"
        },
        {
          "command": "promptHub.newPromptFile",
          "when": "view == promptHubView",
          "group": "navigation"
        },
        {
          "command": "promptHub.gitSync",
          "when": "view == promptHubView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "promptHub.copyPromptContent",
          "when": "view == promptHubView && viewItem == prompt",
          "group": "inline@1"
        },
        {
          "command": "promptHub.aiGenerateMeta",
          "when": "view == promptHubView && viewItem == prompt",
          "group": "inline@2"
        },
        {
          "command": "promptHub.aiOptimize",
          "when": "view == promptHubView && viewItem == prompt",
          "group": "inline@3"
        },
        {
          "command": "promptHub.deletePrompt",
          "when": "view == promptHubView && viewItem == prompt",
          "group": "navigation@99"
        }
      ]
    },
    "configuration": {
      "title": "Prompt Hub",
      "properties": {
        "promptHub.storagePath": {
          "type": "string",
          "default": "~/.prompt-hub",
          "description": "Prompt 存储根目录，支持绝对路径、~、环境变量、工作区变量",
          "order": 1
        },
        "promptHub.storage.autoCreate": {
          "type": "boolean",
          "default": true,
          "description": "目录不存在时是否自动创建",
          "order": 2
        },
        "promptHub.markdown.enableMirror": {
          "type": "boolean",
          "default": false,
          "description": "是否启用 Markdown 镜像",
          "order": 10
        },
        "promptHub.markdown.filenameTemplate": {
          "type": "string",
          "default": "prompt-{timestamp}.md",
          "description": "文件名模板，支持 {name}、{timestamp}、{date}、{emoji} 占位符",
          "order": 11
        },
        "promptHub.markdown.askForFilename": {
          "type": "boolean",
          "default": false,
          "description": "创建 Markdown Prompt 时是否询问文件名",
          "order": 12
        },
        "promptHub.selection.autoDetectPromptName": {
          "type": "boolean",
          "default": true,
          "description": "从选区创建 Prompt 时自动检测 # prompt: 标记",
          "order": 20
        },
        "promptHub.selection.removePromptMarker": {
          "type": "boolean",
          "default": true,
          "description": "检测到标记后，是否从内容中移除标记",
          "order": 21
        },
        "promptHub.git.enableSync": {
          "type": "boolean",
          "default": false,
          "description": "是否启用 Git 同步功能",
          "order": 30
        },
        "promptHub.git.autoPullOnStartup": {
          "type": "boolean",
          "default": false,
          "description": "VSCode 启动时自动拉取远程更新",
          "order": 31
        },
        "promptHub.git.commitMessageTemplate": {
          "type": "string",
          "default": "chore: sync prompts",
          "description": "提交信息模板，支持 {datetime} 占位符",
          "order": 32
        },
        "promptHub.ai.provider": {
          "type": "string",
          "default": "openai",
          "enum": ["openai", "azure", "qwen", "custom"],
          "description": "AI 提供商",
          "order": 40
        },
        "promptHub.ai.model": {
          "type": "string",
          "default": "gpt-4o",
          "description": "使用的模型名称",
          "order": 41
        },
        "promptHub.ai.baseUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "description": "API 基础 URL",
          "order": 42
        },
        "promptHub.ai.temperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 2,
          "description": "生成温度，范围 0-2",
          "order": 43
        },
        "promptHub.ui.showEmojiPicker": {
          "type": "boolean",
          "default": true,
          "description": "创建 Prompt 时显示 emoji 选择器",
          "order": 50
        },
        "promptHub.ui.sortBy": {
          "type": "string",
          "default": "recent",
          "enum": ["recent", "name", "created"],
          "enumDescriptions": ["最近使用", "名称", "创建时间"],
          "description": "排序方式",
          "order": 51
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "postinstall": "npm run compile || echo 'compile skipped'"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
    "fuse.js": "^7.0.0"
  },
  "publisher": "your-publisher-name",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/prompt-hub"
  },
  "license": "MIT",
  "icon": "resources/icon.svg"
}
